<%- include('_header'); -%>
    <h4 class="fw-bold">
        <% if (files.length > 1) { %>
            DATEIEN
        <% } else { %>
            DATEI
        <% } %>
    </h4>
    <h1><%= title %></h1>
    <div class="row mt-3">
        <% meta.forEach(function(info) { %>
            <p class="col text-secondary"><%= info %></p>
        <% }); %>
    </div>
    <div class="row">
        <% files.forEach(function(file) { %>
            <div class="col btn btn-primary m-3 p-5">
                <strong ><%= file.name %></strong><br>
                Herunterladen
            </div>
        <% }); %>
    </div>
<%- include('_footer'); -%>